<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <script src="javascript/script.js" type="module" defer></script>
    <title>SPACE QUIZ</title>
</head>
<body>
    <header class="">
        <h1>
          NASA SPACE QUIZ
        </h1>
    </header>
    <main>
        <!-- USERNAME -->
        <section id="username-section" class="">
            <h2>Create an username</h2>
            <form id="username-form">
              <div class="input-container">
                <label for="username">Your Awesome Username</label>
                <input name="username" type="text" placeholder="" id="username-input" maxlength="20">
              </div>
                <button id="submit-username" type="submit">Create username</button>
            </form>
            </section>

        <section id="quiz" class="invisible">

          <div class="username-list-container">
            <h3>PLAYERS</h3>
            <ul id="usernameList">
            </ul>
          </div>
         

          <section class="question1" id="vraag1">
            <div class="question-text-container">
              <h2>Which planet is this?</h2>
              <p><%= hint %></p>
            </div>
            <img src="<%= image.href %>" alt="The image of the first question">
            <form id="chat-form" class="quiz-form">
                <input type="text" autocomplete="off" id="quiz-input" placeholder="Your answer here...">
                <button type="submit">Submit</button>
              </form>
            </section>

            <section class="invisible" id="vraag2">
              <div class="question-text-container">
                <h2>Which planet is this?</h2>
                <p><%= hint2 %></p>
              </div>
              <img src="<%= image2.href %>" alt="The image of the second question">
              <form id="question2-form" class="quiz-form">
                  <input type="text" autocomplete="off" id="question2-input" placeholder="Your answer here...">
                  <button type="submit">Submit</button>
                </form>
              </section>

              <section class="invisible" id="vraag3">
                <div class="question-text-container">
                  <h2>Which planet is this?</h2>
                  <p><%= hint3 %></p>
                </div>
                <img src="<%= image3.href %>" alt="The image of the third question">
                <form id="question3-form" class="quiz-form">
                    <input type="text" autocomplete="off" id="question3-input" placeholder="Your answer here...">
                    <button type="submit">Submit</button>
                  </form>
                </section>

                <section class="invisible" id="vraag4">
                  <div class="question-text-container">
                    <h2>Which planet is this?</h2>
                    <p><%= hint4 %></p>
                  </div>
                  <img src="<%= image4.href %>" alt="The image of the fourth question">
                  <form id="question4-form" class="quiz-form">
                      <input type="text" autocomplete="off" id="question4-input" placeholder="Your answer here...">
                      <button type="submit">Submit</button>
                    </form>
                  </section>
        </section>
        <section id="end" class="invisible">
          <div class="end-container">
            <h2>
              Thanks for playing!
            </h2>
            <a href="/">BATTLE AGAIN!</a>
          </div>
        </section>
      </main>

      <!-- <footer>
        <section id="username" class="invisible">
            <h3>PLAYERS</h3>
            <ul id="usernameList">
            </ul>
            </section>
      </footer> -->
    <script src="/socket.io/socket.io.js"></script>
</body>
</html>